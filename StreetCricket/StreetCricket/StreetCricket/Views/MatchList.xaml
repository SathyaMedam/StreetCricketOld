<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StreetCricket.Views.MatchList" 
             Style="{DynamicResource BackgroundStyle}"
             Title="Match List">

    <ContentPage.Content>
        <StackLayout Padding="10">
            <ListView x:Name="MatchListView" ItemSelected="OnMatchSelected">
                <ListView.ItemTemplate>
                    <DataTemplate >
                        <TextCell Text="{Binding MatchName}"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>